        <item name="android:actionBarStyle">?attr/colorSecondary</item>
        <item name="colorSurface">@color/earthcolorSurface</item>
    </style>

    <style name="MoonTheme" parent="Theme.Material">
        <item name="colorPrimary">@color/mooncolorPrimary</item>
        <item name="colorPrimaryVariant">@color/mooncolorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/mooncolorOnPrimary</item>
